<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/purple_500"
    app:contentPadding="@dimen/standerd_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_account_circle_24"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/standerd_half"
            android:layout_marginEnd="@dimen/standerd_half">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitle"
                android:text="Srinath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvReleaseDate"
                android:text="01-01-2021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="@dimen/standerd_half"
                android:layout_marginBottom="@dimen/standerd_half"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvOverview"
                android:text="Hi How Are You"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>